<section class="ec-newItemRole">
    <div class="ec-secHeading--tandem">
        <span class="ec-secHeading__en">RANKING</span>
        <span class="ec-secHeading__line"></span>
        <span class="ec-secHeading__ja">ランキング</span>
    </div>
    <div class="row">
        {% for i in 1..2 %}
            <div class="col-6 col-lg-3">
                <div class="text-center">
                    <span class="rank-num">{% if i == 1 %}1{% else %}3{% endif %}</span>
                </div>
                <a class="card-item" href="{{ url('product_detail', {'id': '1'}) }}">
                    <img class="img-fluid" src="{{ asset('cube-1.png', 'save_image') }}">
                    <p class="title">{{ 'front.block.new_item.item_1_name'|trans }}</p>
                    <p class="price">{{ 'front.block.new_item.item_1_price'|trans }}</p>
                </a>
            </div>
            <div class="col-6 col-lg-3">
                <div class="text-center">
                    <span class="rank-num">{{ 2 * i }}</span>
                </div>
                <a class="card-item" href="{{ url('product_detail', {'id': '2'}) }}">
                    <img class="img-fluid" src="{{ asset('sand-1.png', 'save_image') }}">
                    <p class="title">{{ 'front.block.new_item.item_2_name'|trans }}</p>
                    <p class="price">{{ 'front.block.new_item.item_2_price'|trans }}</p>
                </a>
            </div>
        {% endfor %}
    </div>
</section>